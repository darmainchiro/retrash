<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/ID_ImgAdapter"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/txtNamaSolusi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/txtDescription"
        app:layout_constraintStart_toEndOf="@+id/ID_ImgAdapter"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:maxWidth="200dp"
        android:maxLines="5"
        android:text="Tas yang dibuat menggunakan kerajinan tangan ini pembuatannya sama saja dengan tas kerajinan tangan berbahan dasar kardus yang pernah kita bahas sebelumnya.\r\n\r\nKalau untuk pemakaiannya jangan terlalu berlebihan, karena tas ini mempunyai bahan kertas yang termasuk lebih mudah rusak. Maka daripada itu, memakai tas ini cuma untuk mengangkut benda-benda yang ringan seperti buku dan juga majalah"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ID_ImgAdapter"
        app:layout_constraintTop_toBottomOf="@+id/txtNamaSolusi" />


</androidx.constraintlayout.widget.ConstraintLayout>